@model Calculator_Salar_WebApp.Models.CalculatorSalariuNet

@{
    ViewData["Title"] = "Calculator salariu net";
}

<div class="container">

    <h1 style="color:darkgoldenrod; text-align:center"><b>Calculator salariu net</b></h1>
    <p style="color:darkgrey; text-align:center">Calculator salariu aplica reglementarile anului fiscal 2019/2020, ultima actualizare fiind pe 7 ianuarie 2019.</p>
    <br />
    <form asp-controller="CalculatorSalariiNete" asp-action="CalculNet" method="post" role="form" style="color:darkgoldenrod; text-align:center" class="form-inline">
        <div class="form-group">           
            <input asp-for="SalarBrut" class="form-control" placeholder="Introduceti salariul brut" />
            <span asp-validation-for="SalarBrut" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-warning">Calculeaza</button>
    </form>
</div>

